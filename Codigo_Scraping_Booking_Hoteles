    "## ðŸ”§ Helpers (funciones auxiliares)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "53d94252",
   "metadata": {},
   "outputs": [],
   "source": [
    "def handle_no_such_element_exception(task):\n",
    "    try:\n",
    "        return task()\n",
    "    except NoSuchElementException:\n",
    "        return None\n",
    "\n",
    "def click_boton_cargar_mas(driver, delay=3, max_clicks=50):\n",
    "    clicks = 0\n",
    "    while clicks < max_clicks:\n",
    "        try:\n",
    "            # Nuevo selector: busca el texto dentro del span anidado\n",
    "            boton = WebDriverWait(driver, 5).until(\n",
    "                EC.element_to_be_clickable((By.XPATH, '//button[.//span[contains(text(), \"Cargar mÃ¡s resultados\")]]'))\n",
    "            )\n",
    "            driver.execute_script(\"arguments[0].scrollIntoView(true);\", boton)\n",
    "            time.sleep(1)\n",
    "            driver.execute_script(\"arguments[0].click();\", boton)\n",
    "            clicks += 1\n",
    "            print(f\"âœ… Click nÃºmero {clicks} en 'Cargar mÃ¡s resultados'\")\n",
    "            time.sleep(delay)\n",
    "        except TimeoutException:\n",
    "            print(\"â„¹ï¸ No hay mÃ¡s botÃ³n 'Cargar mÃ¡s resultados'\")\n",
    "            break"
   ]
  },
